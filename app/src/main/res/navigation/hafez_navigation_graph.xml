<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.bassamkhafagy.hafez.fragments.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_showStudentsByCodeFragment"
            app:destination="@id/showStudentsByCodeFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />


        <action
            android:id="@+id/action_homeFragment_to_createSoraCompleteFragment"
            app:destination="@id/createSoraCompleteFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/action_homeFragment_to_importExportExcelFragment"
            app:destination="@id/importExportExcelFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_homeFragment_to_showAllStudentsDataFragment"
            app:destination="@id/showAllStudentsDataFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>
    <fragment
        android:id="@+id/createSoraCompleteFragment"
        android:name="com.bassamkhafagy.hafez.fragments.CreateSoraCompleteFragment"
        android:label="CreateSoraCompleteFragment"
        tools:layout="@layout/fragment_create_reciving_sorra" />
    <fragment
        android:id="@+id/showStudentsByCodeFragment"
        android:name="com.bassamkhafagy.hafez.fragments.ShowStudentsByCodeFragment"
        android:label="ShowStudentsByCodeFragment"
        tools:layout="@layout/fragment_show_student_bycode" />
    <fragment
        android:id="@+id/importExportExcelFragment"
        android:name="com.bassamkhafagy.hafez.fragments.ImportExportExcelFragment"
        android:label="ImportExportExcelFragment"
        tools:layout="@layout/fragment_import_export_excel" />
    <fragment
        android:id="@+id/showAllStudentsDataFragment"
        android:name="com.bassamkhafagy.hafez.fragments.showallstudent.ShowAllStudentsDataFragment"
        android:label="ShowAllStudentsDataFragment" />
</navigation>